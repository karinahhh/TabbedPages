<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabbedPages.Page3"
             Title="Itaalia">
    <ContentPage.Content>
        <StackLayout>
            <Frame x:Name="ital" BackgroundColor="#F4A460">
                <Label Text="Colosseum"  
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand"
                       FontSize="Large"/>
            </Frame>
            <Frame x:Name="ital2" BackgroundColor="#CD853F">
                <Label Text="Veneetsia kanalid"  
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand"
                       FontSize="Large"/>
            </Frame>
            <Frame x:Name="ital3" BackgroundColor="#A0522D">
                <Label Text="Pompeie"  
                       VerticalOptions="CenterAndExpand" 
                       HorizontalOptions="CenterAndExpand"
                       FontSize="Large"/>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>