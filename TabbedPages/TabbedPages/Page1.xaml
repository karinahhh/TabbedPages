<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabbedPages.Page1"
             Title="Saksamaa">

    <ContentPage.Content>
        <StackLayout>
            <Frame x:Name="saks" BackgroundColor="#AFEEEE">
                <Label Text="Berliini müür"  
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" FontSize="Large"/>
            </Frame>
            <Frame x:Name="saks2" BackgroundColor="#87CEEB">
                <Label Text="Brandenburgi värav"  
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" FontSize="Large"/>
            </Frame>
            <Frame x:Name="saks3" BackgroundColor="#00BFFF">
                <Label Text="Schwarzwald ehk 'Mustmets'"  
                       VerticalOptions="CenterAndExpand" 
                       HorizontalOptions="CenterAndExpand" FontSize="Large"/>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>